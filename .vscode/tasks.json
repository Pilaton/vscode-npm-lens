{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch:extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:extension"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*building.*$",
          "endsPattern": "^.*built in.*$"
        }
      }
    },
    {
      "label": "watch:webview",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:webview"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*building.*$",
          "endsPattern": "^.*built in.*$"
        }
      }
    },
    {
      "label": "watch:all",
      "dependsOn": ["watch:extension", "watch:webview"],
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "problemMatcher": []
    }
  ]
}
