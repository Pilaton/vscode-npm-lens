{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
