{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "module": "commonjs",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": ["src/**/*", "webpack.*.js"]
}
