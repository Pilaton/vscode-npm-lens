{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "useDefineForClassFields": true
  },
  "include": ["src"],

  "references": [{ "path": "./tsconfig.node.json" }]
}
