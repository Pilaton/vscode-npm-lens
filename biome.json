{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["dist", "node_modules", "package.json", ".vscode"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    },
    "globals": ["React"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "match": ".*",
                "selector": {
                  "kind": "objectLiteralProperty"
                }
              },
              {
                "match": ".*",
                "selector": {
                  "kind": "objectLiteralSetter"
                }
              },
              {
                "match": ".*",
                "selector": {
                  "kind": "objectLiteralGetter"
                }
              }
            ]
          }
        }
      },
      "suspicious": {
        "noConsoleLog": "off",
        "noConsole": "off",
        "noReactSpecificProps": "off"
      }
    }
  }
}
